model
  schema 1.1

type user

type group
  relations
    define member: [user]

type document
  relations
    define can_change_owner: owner
    define can_read: viewer or editor or owner
    define can_share: owner
    define can_write: editor or owner
    define owner: [user]
    define viewer: [user, user:*, group#member]
    define editor: [user, user:*, group#member]